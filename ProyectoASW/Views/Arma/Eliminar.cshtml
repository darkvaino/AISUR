@model ENTIDAD.arma

<h3>¿Estás seguro de eliminar este elemento?</h3>
<div>
    <h4>ARMA</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            ID
        </dt>

        <dd>
            @Html.DisplayFor(model => model.id_arma)
        </dd>

        <dt>
            NOMBRE
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt>
            PESO
        </dt>

        <dd>
            @Html.DisplayFor(model => model.peso)
        </dd>

        <dt>
            CANTIDAD MUNICION
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cantidadMunicion)
        </dd>

        <dt>
            TIPO ARMA
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IdTipoArma_Fk)
        </dd>

        <dt>
            MARCA
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IdMarca_Fk)
        </dd>
    </dl>

    @using (Html.BeginForm("Eliminar", "Arma", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            @Html.ActionLink("Regresar", "Index")
        </div>
    }
</div>
