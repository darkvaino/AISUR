@model IEnumerable<ENTIDAD.profesion>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>PROFESION</h2>

<p>
    @Html.ActionLink("Create Profesion", "Crear","Profesion")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id_profesion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.id_profesion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.id_profesion }) |
            @*@Html.ActionLink("Detalles", "GetProfesion", new {id=item.id_profesion }) |*@
            @Html.ActionLink("Eliminar", "Eliminar", new { id=item.id_profesion })
        </td>
    </tr>
}

</table>
