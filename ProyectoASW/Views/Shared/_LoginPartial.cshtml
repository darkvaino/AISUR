@using Microsoft.AspNet.Identity
@{
    var nombre = Session["UsuarioRegistrado"];
}
@if (nombre != null)
{
<ul class="nav navbar-nav navbar-right">
    <li>
        @Html.ActionLink("Hola " + nombre + "!", "Index", "Home", routeValues: null, htmlAttributes: new { title = "Manage" })
    </li>
    <li>@Html.ActionLink("Cerrar sesión", "LogOff", "Account", routeValues: null, htmlAttributes: new { id = "logoutForm" })</li>

</ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Registrarse", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Iniciar sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
