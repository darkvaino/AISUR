@{
    var nombre = Session["UsuarioRegistrado"];
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AISUR WEB</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
<link href="~/Content/css/estilos.css" rel="stylesheet" />

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("PROYECTO AIRSUR", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>


            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    @if (nombre != null)
                    {
                        <li>@Html.ActionLink("Arma", "Index", "Arma")</li>

                        <li>@Html.ActionLink("Soldado", "Index", "Soldado")</li>
                        <li>@Html.ActionLink("Vehiculo", "Index", "Vehiculo")</li>

                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>


        </div>
    </div>



    <div class="container body-content col">
        @RenderBody()
        <hr />
        <div class="Image2">
            @*<img class="img-fluid " src="~/Content/imagenes/portada-aisur.jpg" />*@ 
        </div>

        <footer>
            <p>&copy; @DateTime.Now.Year - AISUR Copyright 2022</p>
        </footer>
    </div>
   

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
