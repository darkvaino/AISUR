@model IEnumerable<ENTIDAD.soldado>

@{
    ViewBag.Title = "Listado de Soldados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Soldados</h2>

<p>
    @Html.ActionLink("Crear Soldado", "Crear", "Soldado")
</p>
<table class="table">
    <tr>
        <th>
           ID SOLDADO
        </th>
        <th>
            EDAD (Años)
        </th>
        <th>
            EXPERIENCIA (%)
        </th>
        <th>
            CAPACIDAD DE CARGA (KG)
        </th>
        <th>
            PAIS
        </th>
        <th>
            PROFESION
        </th>
        <th>
            RANGO
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.id_soldado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.edad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.experiencia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.capacidadCarga)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pais.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.profesion.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.rango.nombre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id = item.id_soldado }) |
            @*@Html.ActionLink("Detalles", "GetSoldado", new { id = item.id_soldado }) |*@
            @Html.ActionLink("Eliminar", "Eliminar", new { id = item.id_soldado })
        </td>
    </tr>
}

</table>
